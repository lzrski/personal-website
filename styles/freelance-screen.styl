#freelance

  display             flex
  justify-content     center
  align-items         center
  flex-direction      column
  border-top          solid 2rem gray-light

  color               gray
  background-image    url('background-bottom.jpg')
  background-position top center
  background-size     cover


  .team
    display           flex
    flex-flow         row wrap
    justify-content   space-around
    margin            12rem 0
    margin-bottom     0
    text-align        center

    .teammate
      text-decoration none

      img
        height        40rem

        @media tablet
          height        50rem

  h1, h2
    text-align        center

  .typeform-share
    font-size         10rem
    flex-grow         1
    color             white
    background        hsl(0, 52%, 52%)

    margin-bottom     7rem
    margin-top        7rem
    padding           5rem

    text-decoration   none
    text-align        center
    font-weight       regular
