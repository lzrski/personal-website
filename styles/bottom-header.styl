header
  display             flex
  justify-content     center
  align-items         center
  flex-direction      column
  text-align          center

  width               100%

  background          white
  color               hsl(0, 52%, 52%)

  padding-top         10rem
  @media tablet
    padding-top       16rem

  h1
    margin              0 20rem

    font-weight         regular
    font-size           12.5rem

    strong
      font-weight       regular

  h3
    margin              10rem 20rem

  .typeform-share
    font-size         10rem
    flex-grow         1
    color             white
    text-decoration   none
    background        hsl(0, 52%, 52%)

    margin-bottom     20rem
    margin-top        7rem
    padding           5rem

    &:hover
      font-weight bolder
